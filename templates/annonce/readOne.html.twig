{% extends 'base.html.twig' %}

{% block title %} - {{ annonce.titre }} {% endblock %}

{% block link %} <link rel="stylesheet" href="/css/annonceRead.css">{% endblock %}

{% block body %}
<div class="annonce-titre" style="background-image : url( {{annonce.imageCouverture}} )">
    <div class="container">
        <h1>{{ annonce.titre }}</h1>
        <p> {{ annonce.introduction}} </p>
        <p class="h2">
            <strong> {{annonce.chambres}} chambres</strong> pour <strong>{{annonce.prix}} &euro;</strong> par nuit
        </p>
        <a href="#" class="btn btn-primary mb-2"> RÃ©server ! </a>
    </div>
</div>

<div class="container">

    <div class="row mt-3">
        <div class="col-md-8">
            {{annonce.description | raw}}
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for image in annonce.images %}
                    <li data-target="#carouselExampleIndicators" 
                    data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
                    {% endfor %}
                </ol>

                <div class="carousel-inner">
                    {% for image in annonce.images %}
                    <div class="carousel-item  {% if loop.first %} active {% endif %}">
                        <img class="d-block w-100" src="{{ image.url}}" alt="{{ image.legende }}">
                        <div class="carousel-caption d-none d-md-block">
                            <h5> {{annonce.titre}} </h5>
                            <p>{{ image.legende}}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>

                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col">

            <div class="row">
                <div class="col-4">
                    <img src="{{ asset('assets/img/proprietaire/avatar.jpg') }}" alt="Avatar" style="width: 80%; display: block">
                </div>
                <div class="col">
                    <h3> Sarah Parker </h3>
                    <span class="badge badge-primary mb-3"> 3 annonces </span>
                </div>
            </div>

            <div class="row">
                <p> Lorem ipsum </p>
                <p> Lorem ipsum </p>
                <p> Lorem ipsum </p>
            </div>

        </div>
    </div>
</div>

{% endblock %}